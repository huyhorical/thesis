<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout
    android:id="@+id/drawer"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context="com.kdoctor.main.view.MainActivity"
    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        >
        <RelativeLayout
            android:id="@+id/rl_main"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:background="#0ff"
            android:visibility="visible"
            >
            <ImageView
                android:id="@+id/iv_main"
                android:layout_width="50dp"
                android:layout_height="31dp"
                android:src="@drawable/kdoctor_icon"
                android:layout_centerVertical="true"
                android:paddingLeft="20dp"
                android:paddingBottom="1dp"
                />

            <ImageView
                android:id="@+id/iv_guide"
                android:layout_toRightOf="@+id/iv_main"
                android:layout_width="50dp"
                android:layout_height="30dp"
                android:src="@drawable/icon_help"
                android:layout_centerVertical="true"
                android:layout_marginStart="15dp"
                android:layout_marginLeft="15dp"
                />

            <TextView
                android:id="@+id/tv_title"
                android:layout_toRightOf="@+id/iv_guide"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:text="Title list"
                android:gravity="center|right"
                android:paddingRight="20dp"
                android:textSize="22dp"
                android:textStyle="bold"
                android:textColor="#fff"
                />
        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/rl_back"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:background="#0ff"
            android:visibility="gone"
            >
            <ImageView
                android:id="@+id/iv_back"
                android:layout_width="50dp"
                android:layout_height="30dp"
                android:src="@drawable/icon_back_white"
                android:layout_centerVertical="true"
                android:paddingLeft="10dp"
                />
            <TextView
                android:id="@+id/tv_category"
                android:layout_toRightOf="@+id/iv_back"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:text="Title list"
                android:gravity="center|right"
                android:paddingRight="20dp"
                android:textSize="22dp"
                android:textStyle="bold"
                android:textColor="#fff"

                />
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            >
            <com.roughike.bottombar.BottomBar
                android:id="@+id/bottom_bar"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_alignParentBottom="true"
                app:bb_tabXmlResource="@xml/bottombar_tabs" />

            <android.support.v4.view.ViewPager
                android:id="@+id/view_pager"
                android:paddingBottom="60dp"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_alignParentTop="true"
                android:layout_alignParentStart="true"
                >
            </android.support.v4.view.ViewPager>
        </RelativeLayout>
    </LinearLayout>
    <FrameLayout
        android:id="@+id/fl"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        android:choiceMode="singleChoice"
        android:background="#fff"
        android:layout_marginLeft="-64dp"
        android:layout_marginStart="-64dp"
        >
        <RelativeLayout
            android:id="@+id/rl_drawer"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:background="#0ff"
            android:visibility="visible"
            >
            <ImageView
                android:id="@+id/iv_drawer"
                android:layout_width="50dp"
                android:layout_height="30dp"
                android:src="@drawable/icon_back_white"
                android:layout_centerVertical="true"
                android:paddingLeft="10dp"
                />
            <TextView
                android:id="@+id/tv_drawer"
                android:layout_toRightOf="@+id/iv_drawer"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:text="Lịch sử chuẩn đoán"
                android:gravity="center|right"
                android:paddingRight="20dp"
                android:textSize="22dp"
                android:textStyle="bold"
                android:textColor="#fff"
                />
        </RelativeLayout>
        <fragment
            android:id="@+id/fragmentDrawer"
            android:layout_marginTop="60dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:name="com.kdoctor.fragments.drawer.view.FragmentDrawer"
            >
        </fragment>

    </FrameLayout>
</android.support.v4.widget.DrawerLayout>