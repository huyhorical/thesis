<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:paddingBottom="24dp"
    android:id="@+id/ll_item"
    android:background="#ffffff"
    >
    <ImageView
        android:id="@+id/iv_sickness"
        android:layout_width="360dp"
        android:layout_height="202dp"
        android:layout_gravity="center_horizontal"
        android:src="@drawable/icon_display"
        android:background="#575"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_gravity="center_horizontal"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >
        <CheckBox
            android:id="@+id/cb_note"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:button="@drawable/custom_checkbox_selector"
            android:layout_margin="16dp"
            />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:gravity="center_vertical"
            >
            <TextView
                android:id="@+id/tv_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Cảm cúm"
                android:textStyle="bold"
                android:textSize="17dp"
                />
            <TableRow
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Biểu hiện: "
                    android:textStyle="bold"
                    />
                <TextView
                    android:id="@+id/tv_prognostic"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Khóc hoài không chịu ngủ, bla bla"
                    android:lines="1"
                    android:layout_marginRight="16dp"
                    android:layout_marginEnd="16dp"
                    />
            </TableRow>
        </LinearLayout>

    </LinearLayout>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Tổng quan: "
        android:layout_marginLeft="16dp"
        android:layout_marginStart="16dp"
        android:textStyle="bold"
        />
    <TextView
        android:id="@+id/tv_summary"
        android:layout_marginLeft="16dp"
        android:layout_marginStart="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginEnd="16dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Đây là bệnh hiện nay chưa có thuốc điều trị."
        android:lines="3"
        />
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/tv_research"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Tìm hiểu thêm >>"
            android:layout_marginRight="16dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="16dp"
            android:textAlignment="textEnd"
            android:textColor="#00f"
            android:layout_alignParentRight="true"
            />
    </RelativeLayout>
</LinearLayout>
