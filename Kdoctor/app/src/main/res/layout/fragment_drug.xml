<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:sothree="http://schemas.android.com/apk/res-auto"
    android:paddingTop="16dp"
    >
    <android.support.v4.widget.SwipeRefreshLayout
        android:id="@+id/srl_drug"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >
        <android.support.v7.widget.RecyclerView
            android:layout_marginTop="0dp"
            android:paddingTop="0dp"
            android:id="@+id/rv_drug"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scrollbars="vertical"
            />
    </android.support.v4.widget.SwipeRefreshLayout>
    <com.getbase.floatingactionbutton.FloatingActionsMenu
        android:id="@+id/fam"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|right"
        android:layout_marginBottom="15dp"
        android:layout_marginRight="15dp"
        sothree:fab_expandDirection="up"
        sothree:fab_addButtonColorNormal="#0f0"
        sothree:fab_addButtonColorPressed="#0ff"
        sothree:fab_addButtonSize="normal"
        >
        <com.getbase.floatingactionbutton.FloatingActionButton
            android:id="@+id/fab_find"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            sothree:fab_size="mini"
            sothree:fab_icon="@drawable/icon_find"
            sothree:fab_colorPressed="#0ff"
            sothree:fab_colorNormal="#0f0"
            />
        <com.getbase.floatingactionbutton.FloatingActionButton
            android:id="@+id/fab_heart"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            sothree:fab_size="mini"
            sothree:fab_icon="@drawable/icon_selected"
            sothree:fab_colorPressed="#0ff"
            sothree:fab_colorNormal="#0f0"
            />

    </com.getbase.floatingactionbutton.FloatingActionsMenu>

    <FrameLayout
        android:id="@+id/fl_label"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Tìm thuốc"
            android:layout_gravity="bottom|end"
            android:layout_marginEnd="90dp"
            android:layout_marginBottom="175dp"
            android:background="#CCFFFFFF"
            android:textColor="#0f0"
            android:padding="2dp"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Đang quan tâm"
            android:layout_gravity="bottom|end"
            android:layout_marginEnd="90dp"
            android:layout_marginBottom="113dp"
            android:background="#CCFFFFFF"
            android:textColor="#0f0"
            android:padding="2dp"
            />
    </FrameLayout>

</FrameLayout>
